<% if devise_mapping.omniauthable? %>
  <% resource_class.omniauth_providers.each do |provider| %>
  <%= link_to "페이스북으로 로그인하기", user_facebook_omniauth_authorize_path, class: "side-10 btn btn-success col-xs-12 col-md-3"%>
  <% end %>
<% end %>


<% if controller_name != 'sessions' %>
  <%= link_to t('로그인'), new_session_path(resource_name), class: 'btn btn-primary side-10 col-xs-12 col-md-3' %>
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('회원가입'), new_registration_path(resource_name), class: 'btn btn-primary side-10 col-xs-12 col-md-2' %>
<% end %>

<% if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to t('비밀번호 찾기'), new_password_path(resource_name), class: 'btn btn-danger side-10 col-xs-12 col-md-2' %><br />
<% end %>

<% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('.didn_t_receive_confirmation_instructions', default: "Didn't receive confirmation instructions?"), new_confirmation_path(resource_name) %><br />
<% end %>

<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('.didn_t_receive_unlock_instructions', default: "Didn't receive unlock instructions?"), new_unlock_path(resource_name) %><br />
<% end %>


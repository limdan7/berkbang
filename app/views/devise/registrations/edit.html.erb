<%= bootstrap_devise_error_messages! %>
<div class="panel panel-default devise-bs">
  <div class="panel-heading">
    <h4 align="center">프로필 수정</h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="form-group">
        <%= f.label :이메일 %>
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label "이름" %>
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label "프로필 사진" %>
        <%= f.file_field :avatar, class:"form-control"%>
      </div>
      <div class="form-group">
        <%= f.label :비밀번호 %> <i>(<%= t('바꾸지 않으시려면 입력하지 마세요.') %>)</i>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :'비밀번호 확인' %>
        <%= f.password_field :password_confirmation, class: 'form-control'  %>
      </div>
      <div class="form-group">
        <%= f.label :'현재 비밀번호' %> <i>(<%= t('수정하려면 비밀번호를 다시 입력하세요.') %>)</i>
        <%= f.password_field :current_password, class: 'form-control' %>
      </div>
      <%= f.submit '수정하기', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

<p><%= t('계정을 삭제하시겠습니까?') %> <%= link_to t('삭제 하기'), registration_path(resource_name), data: { confirm: t('.are_you_sure', default: "Are you sure?") }, method: :delete %>.</p>

<%= link_to t('돌아가기'), :back, class: 'btn btn-primary' %>

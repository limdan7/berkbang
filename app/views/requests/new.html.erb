<%= render 'shared/errors', obj: @request %>

<div class="row">
  <div class="col-xs-12" align="center">
    <%= form_for(@request, :html => { multiplart: true, class:"form-horizontal", role:"form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-md-2 col-xs-2">
        <%= f.label '내용' %>
      </div>
      <div class="col-md-10 col-xs-10">
        <%= f.text_area :description,class:"form-control", autofocus: true%>
      </div>
  
    </div>
    <div class="form-group">
      <div class="col-xs-offset-2 col-xs-4">
        <%= f.submit '작성완료', class: 'btn btn-custom' %>
      </div>
      <div class="col-xs-offset-2">
        <%= link_to "방 목록으로 돌아가기", rooms_path, class:"btn btn-custom"%>
      </div>
    </div>
    <% end %>
  </div>
</div>
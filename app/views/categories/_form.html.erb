<%= render 'shared/errors', obj: @category %>
<%= form_for(@category, :html=>{class:"form-horizontal", role:"form"}) do |f| %>
<div class="form-group">
  <div class="control-label col-sm-2">
    <%= f.label '카테고리 제목' %>
  </div>
  <div class="col-sm-8">
    <%= f.text_field :name, class: "form-control", placeholder: "카테고리 제목", autofocus: true%>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit '등록' ,class:'btn btn-primary btn-lg' %>
  </div>
</div>
<% end %>

<div class="col-xs-4 col-xs-offset-4">
  [<%= link_to "취소하고 방 목록으로 돌아가기", rooms_path %>]
</div>
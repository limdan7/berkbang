<% obj.each do |room| %>

<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="well well-lg">
      <div class="room-address">
        <%= link_to room.address, room_path(room) %>
      </div>
      <% if room.categories.any? %>
        <p>카테고리: <%= render room.categories %></p>
      <% end %>
      <div class="room-body">
        <%= truncate(room.description, length: 100) %>
        <div class="room-meta-details">
          <small>작성자: <%= room.user.name if room.user%>, 작성: <%=time_ago_in_words(room.created_at) %>, 수정: <%= time_ago_in_words(room.updated_at) %> </small>
        </div>
      </div> 
      <% if signed_in? && (current_user==room.user || current_user.admin?)%>
      <div class="room-actions">
        <%= link_to "수정하기", edit_room_path(room), class: "btn btn-xs btn-primary" %>
        <%= link_to "글 삭제하기", room_path(room), method: :delete, data:{confirm:"정말 삭제하시겠습니까?"}, class: "btn btn-xs btn-danger" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<% end %>
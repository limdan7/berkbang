<%= form_for :conversation, url: :conversations, html: {class: ""} do |f| %>
  <div class="form-group">
    <%= f.label :recipients %>
    <%= f.select(:recipients, User.all.collect {|p| [ p.name, p.id]}, {}, {multiple: true, class: "form-control"})%>
  </div>
  
  <div class="form-group">
    <%= f.label :subject %>
    <%= f.text_field :subject, placeholder: "Subject", class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :message %>
    <%= f.text_area :body, class: 'form-control', placeholder: "메세지를 적어주세요", rows: 4 %>
  </div>
  
  <%= f.submit "메세지 보내기", class: "btn btn-sucess" %>
<% end %>
<%= render 'shared/errors', obj: @room %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@room, :html => {class:"form-horizontal", role:"form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label '주소' %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :address, class:"form-control",placeholder:"주소를 적어주세요. e.g. 2731 Haste", autofocus: true%>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label '설명' %>
      </div>
      <div class="col-sm-8">
        <%= f.text_area :description, rows: 10, class:"form-control",placeholder:"방에 대한 간단한 정보를 적어주세요." %>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-sm-offset-2 col-sm-8">
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb|%>
            <% cb.label(class:"checkbox-inline input_checkbox"){cb.check_box(class:"checkbox")+cb.text} %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit '작성완료', class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [<%= link_to "방 목록으로 돌아가기", rooms_path %>]
    </div>
  </div>
</div>

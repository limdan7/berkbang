<%= render 'shared/errors', obj: @demand %>
<div class="row">
  <div class="col-xs-12" algin="center">
    <%= form_for(@search, :html => { multiplart: true, class:"form-horizontal", role:"form"}) do |f| %>

    <div class="form-group">
      <div class="control-label col-xs-2">
        <%= f.label '성별' %>
      </div>
      <div class="col-xs-5 btn-group" data-toggle="buttons">
        <label class="btn btn-custom">
          <%= radio_button("search","gender","남자")%> 남자  
        </label>
        <label class="btn btn-custom">
          <%= radio_button("search","gender","여자")%> 여자
        </label>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-xs-2">
        <%= f.label '기간' %>
      </div>
      <div class="col-md-3 col-md-offset-0 col-xs-offset-2 col-xs-9">
          <span>시작</span>
          <%= f.date_field :start_date, class:"form-control", autofocus: true%>
      </div>
      <div class="col-md-3 col-md-offset-0 col-xs-offset-2 col-xs-9">
          <span>종료</span>
          <%= f.date_field :finish_date, class:"form-control", autofocus: true%>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-xs-2">
        <%= f.label '최대가격' %>
      </div>
      <div class="col-xs-4">
        <div class="input-group">
          <span class="input-group-addon price-margin">$</span></span>
          <%= f.number_field :price, class:"form-control",placeholder:"월세", autofocus: true%>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-xs-2">
        <%= f.label '종류' %>
      </div>
     <div class="col-md-4 col-xs-10 btn-group" data-toggle="buttons">
        <label class="btn btn-custom">
          <%= radio_button("search","room_private","혼자 쓰는 방")%> 혼자 쓰는방
        </label>
        <label class="btn btn-custom">
          <%= radio_button("search","room_private","나눠 쓰는 방")%> 나눠 쓰는방
        </label>
        <label class="btn btn-custom">
          <%= radio_button("search","room_private","집 전체")%> 집 전체
        </label>
      </div>
    </div>